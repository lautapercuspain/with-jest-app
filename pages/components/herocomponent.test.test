import React from 'react';
import { render, screen, cleanup, waitFor, fireEvent } from '@testing-library/react';
import userEvent from '@testing-library/user-event';
import '@testing-library/jest-dom';
import HeroComponent from './HeroComponent';

afterEach(() => {
  cleanup();
});

describe('HeroComponent', () => {
  test('renders HeroComponent with a title, description and image', async () => {
    render(<HeroComponent image="image.jpg" title="My Title" description="My Description" />);

    const imgElement = screen.getByRole('img', { name: /Hero Image/i });
    expect(imgElement).toBeInTheDocument();
    expect(imgElement).toHaveAttribute('src', 'image.jpg');

    const titleElement = screen.getByText('My Title', { exact: false });
    expect(titleElement).toBeInTheDocument();

    const descriptionElement = screen.getByText('My Description', { exact: false });
    expect(descriptionElement).toBeInTheDocument();
  });
});